<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backg"

    android:padding="20dp"
    android:gravity="center"
    tools:context=".Payment">


    <ImageView
        android:src="@drawable/credit"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/bonjour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="veuillez choisir une metode de payment"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeColor="@color/white"
        android:theme="@style/TextInputLayoutStyle"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        app:hintTextAppearance="@style/appTheme">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Numero du carte"
            android:drawableStart="@drawable/ic_baseline_create_24"
            android:padding="10dp"
            android:inputType="text"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginBottom="20dp">

        </com.google.android.material.textfield.TextInputEditText>



    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            app:boxStrokeColor="@color/white"
            android:theme="@style/TextInputLayoutStyle"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            app:hintTextAppearance="@style/appTheme">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/age"
                android:hint="date"
                android:padding="10dp"
                android:inputType="text"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginBottom="20dp">

            </com.google.android.material.textfield.TextInputEditText>



        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout

            android:layout_marginLeft="90dp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            app:boxStrokeColor="@color/white"
            android:theme="@style/TextInputLayoutStyle"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            app:hintTextAppearance="@style/appTheme">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="cvv"
                android:padding="10dp"
                android:inputType="text"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginBottom="20dp">

            </com.google.android.material.textfield.TextInputEditText>



        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:text="valider"
        android:background="@drawable/stylebutton"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textColor="#fff"
        />



</LinearLayout>